<%- include("header",{type:'allArticle'}) %>
  <%  if(posts.length){ %>
    <div class="all-article-container">
      <% posts.forEach(function(res){ %>
      <div class="all-wrapper">
        <div class="title-wrapper">
          <span class="title-bar"></span>
          <a href="/posts/<%= res.id %>">
            <span class="title"><%= res.title %></span>
          </a>
        </div>
        
        <div class="content markdown">
          <div class="text-content markdown-body"><%- res.content %></div>
          <a class="text-link" href="/posts/<%= res.id %>">阅读全文</a>
        </div>
        
        <div class="content-bottom-detail">
          <span class="create-time">
            <span><%= res.moment %></span>
            <span><a href="/posts?author=<%= res.name %>"><%= res.name %></a></span>
            <span>评论:(<%= res.comments %>)</span>
            <span>阅读:(<%= res.pv %>)</span>
          </span>
        </div>
      </div>
      <% }) %>
    </div>
  <% } %>
